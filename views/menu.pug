extends base

mixin categoryBox(name,icon)
    .category-box(class=`${name === "Tudo"?"category-box-active":''}` data-name=`${name}` data-subcategories=`${name==="Tudo"?"all":subCategories[name]}`)
        svg.category-box-icon
            use(href=`/img/icons.svg#icon-${icon}`)
        p=name

mixin subCategory(name)
    .section-subcategory=name 

block content
    .bg-design 
      img(src="/img/home/images/shape-5.png", alt="")
    .bg-design2 
      img(src="/img/home/images/shape-5.png", alt="")
    .section-menu-options.hidden
      svg.section-menu-options-close-btn
        use(href="/img/icons.svg#icon-close")
      .recipe-left
        .recipe-image
          img(src='#', alt='')
        .menu-recipe-info
