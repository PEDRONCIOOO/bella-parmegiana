            | Tomate, Tomate, Tomate, Tomate, Tomate, Tomate, Tomate, Tomate,
          span.menu-recipe-description
            | Tomate, Tomate, Tomate, Tomate, Tomate, Tomate, Tomate, Tomate,
      .recipe-right
        form.recipe-options
          span DESCRI&Ccedil;&Acirc;O
          .recipe-observations
            p OBSERVA&Ccedil;&Otilde;ES DO PEDIDO
            input(type='text', showcurrentandmaxlength='true', maxlength='100')
        .menu-price-button
          .menu-price-button-controls
            button.menu-price-button-control(data-goto="0") 
              svg
                use(href=`/img/icons.svg#icon-minus`)
